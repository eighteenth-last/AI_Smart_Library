<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.library.module.user.mapper.UserMapper">

    <!-- 用户结果映射 -->
    <resultMap id="UserMap" type="com.library.module.user.entity.User">
        <id column="user_id" property="userId"/>
        <result column="username" property="username"/>
        <result column="password_hash" property="passwordHash"/>
        <result column="nickname" property="nickname"/>
        <result column="role" property="role"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
        <result column="status" property="status"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <!-- 用户VO结果映射 -->
    <resultMap id="UserVOMap" type="com.library.module.user.vo.UserVO">
        <id column="user_id" property="userId"/>
        <result column="username" property="username"/>
        <result column="nickname" property="nickname"/>
        <result column="role" property="role"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
        <result column="status" property="status"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <!-- 根据用户名查询用户 -->
    <select id="selectByUsername" resultMap="UserMap">
        SELECT
            user_id, username, password_hash, nickname, role, phone, email, status, created_at, updated_at
        FROM user
        WHERE username = #{username}
    </select>

    <!-- 根据邮箱查询用户 -->
    <select id="selectByEmail" resultMap="UserMap">
        SELECT
            user_id, username, password_hash, nickname, role, phone, email, status, created_at, updated_at
        FROM user
        WHERE email = #{email}
    </select>

    <!-- 分页查询用户列表（管理员） -->
    <select id="selectUserList" resultMap="UserVOMap">
        SELECT
            user_id, username, nickname, role, phone, email, status, created_at
        FROM user
        WHERE 1=1
        <if test="keyword != null and keyword != ''">
            AND (username LIKE CONCAT('%', #{keyword}, '%')
                 OR nickname LIKE CONCAT('%', #{keyword}, '%'))
        </if>
        <if test="role != null and role != ''">
            AND role = #{role}
        </if>
        <if test="status != null">
            AND status = #{status}
        </if>
        ORDER BY created_at DESC
    </select>

    <!-- 更新用户最后登录时间 -->
    <update id="updateLastLoginTime">
        UPDATE user
        SET updated_at = NOW()
        WHERE user_id = #{userId}
    </update>

</mapper>